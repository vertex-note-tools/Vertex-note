{
  "name": "gemini-vertex-backend",
  "env": {
    "BACKEND_SECRET": {
      "description": "Shared secret required in the X-Proxy-Secret header from your frontend.",
      "generator": "secret"
    },
    "VERTEX_LOCATION": {
      "description": "Vertex AI region for Gemini 3 (fallback paths).",
      "value": "europe-west4",
      "required": false
    },
    "GEMINI_MODEL_ID": {
      "description": "Gemini 3 model ID (fallback).",
      "value": "gemini-3-pro",
      "required": false
    },
    "GEMINI_LOCATION": {
      "description": "Gemini 3 region (fallback).",
      "value": "europe-west4",
      "required": false
    },
    "GEMINI25_MODEL_ID": {
      "description": "Gemini 2.5 model ID used by the frontend option (recommended).",
      "value": "gemini-2.5-pro"
    },
    "GEMINI25_LOCATION": {
      "description": "Gemini 2.5 region (for this setup).",
      "value": "europe-west1"
    }
  },
  "options": {
    "allow-unauthenticated": true,
    "memory": "512Mi",
    "cpu": "1",
    "concurrency": 80,
    "max-instances": 20
  },
  "hooks": {
    "precreate": {
      "commands": [
        "bash scripts/precreate.sh"
      ]
    },
    "postcreate": {
      "commands": [
        "bash scripts/postcreate.sh"
      ]
    }
  }
 }
